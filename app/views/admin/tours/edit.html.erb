<%= form_with(model: [:admin, @tour], local: true) do |form| %>
  <%= render 'error' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <p>
      <%= form.label :tour_name %><br>
      <%= form.text_field :tour_name, class:"form-control" %>
    </p>
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description, :value => @tour.description, class:"form-control" %>
    </p>
    <p>
      <%= form.label :country %><br>
      <%= form.select(:country, [ 'Việt Nam', 'Hàn Quốc' ], { :class => 'select' }) %>
    </p>

    <p>
      <%= form.label :city %><br>
      <%= form.select(:city, [ 'Đằ nẵng', 'Huế', 'Ninh Bình', 'Hà Nội', 'Hồ Chí Minh', 'Quảng Ninh' ], { :class => 'select' }) %>
    </p>
    <p>
      <%= form.label :price %><br>
      <%= form.text_field :price, class:"form-control" %>
    </p>
    <p>
      <%= form.label :number_day %><br>
      <%= form.text_field :number_day, class:"form-control" %>
    </p>
    <p>
      <%= form.label :category %><br>
      <%= select("tour", "category_id", Category.all.collect {|c| [ c.category, c.id ] }, {prompt: 'Select category', selected: '', disabled: ''}) %>
    </p>
    <p>
      <%= form.label :discount %><br>
      <%= select("tour", "discount_id", Discount.all.collect {|d| [ d.discount, d.id ] }, {prompt: 'Select dicount', selected: '', disabled: ''}) %>
    </p>
    <p>
      <%= form.label :image %>
      <%= form.file_field :image %>
      <%= image_tag @tour.image.to_s, class:'fixsize' %>
    </p>

    <p>
      <%= form.submit  "update tour", class: "btn btn-primary" %>
    </p>

  <% end %>
    </div>
  </div>

  <%= link_to 'Back', admin_tours_path %>
